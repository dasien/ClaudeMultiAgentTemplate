{
  "version": "2.0.0",
  "description": "Workflow templates with input/output specifications and status transitions",
  "workflows": {
    "new-feature-development": {
      "name": "New Feature Development",
      "description": "Complete workflow for implementing a new feature",
      "steps": [
        {
          "agent": "requirements-analyst",
          "input": "enhancements/{enhancement_name}/{enhancement_name}.md",
          "required_output": "analysis_summary.md",
          "on_status": {
            "READY_FOR_DEVELOPMENT": {
              "next_step": "architect",
              "auto_chain": true
            },
            "BLOCKED": {
              "next_step": null,
              "auto_chain": false,
              "description": "Cannot proceed without external input or decision"
            },
            "NEEDS_CLARIFICATION": {
              "next_step": null,
              "auto_chain": false,
              "description": "Requirements are unclear and need stakeholder input"
            }
          }
        },
        {
          "agent": "architect",
          "input": "{previous_step}/required_output/",
          "required_output": "implementation_plan.md",
          "on_status": {
            "READY_FOR_IMPLEMENTATION": {
              "next_step": "implementer",
              "auto_chain": true
            },
            "BLOCKED": {
              "next_step": null,
              "auto_chain": false,
              "description": "Cannot proceed without external input or decision"
            },
            "NEEDS_RESEARCH": {
              "next_step": null,
              "auto_chain": false,
              "description": "Technical unknowns require investigation before proceeding"
            }
          }
        },
        {
          "agent": "implementer",
          "input": "{previous_step}/required_output/",
          "required_output": "implementation_summary.md",
          "on_status": {
            "READY_FOR_TESTING": {
              "next_step": "tester",
              "auto_chain": true
            },
            "READY_FOR_INTEGRATION": {
              "next_step": "tester",
              "auto_chain": true
            },
            "BLOCKED": {
              "next_step": null,
              "auto_chain": false,
              "description": "Cannot proceed without external input or decision"
            },
            "BUILD_FAILED": {
              "next_step": null,
              "auto_chain": false,
              "description": "Code does not compile or build successfully"
            }
          }
        },
        {
          "agent": "tester",
          "input": "{previous_step}/required_output/",
          "required_output": "test_summary.md",
          "on_status": {
            "TESTING_COMPLETE": {
              "next_step": "documenter",
              "auto_chain": true
            },
            "BLOCKED": {
              "next_step": null,
              "auto_chain": false,
              "description": "Cannot proceed without external input or decision"
            },
            "TESTS_FAILED": {
              "next_step": null,
              "auto_chain": false,
              "description": "One or more tests did not pass"
            }
          }
        },
        {
          "agent": "documenter",
          "input": "{previous_step}/required_output/",
          "required_output": "documentation_summary.md",
          "on_status": {
            "DOCUMENTATION_COMPLETE": {
              "next_step": null,
              "auto_chain": false
            },
            "BLOCKED": {
              "next_step": null,
              "auto_chain": false,
              "description": "Cannot proceed without external input or decision"
            },
            "NEEDS_CLARIFICATION": {
              "next_step": null,
              "auto_chain": false,
              "description": "Need more information to complete documentation"
            }
          }
        }
      ]
    },
